<%
	let gold_sponsors = [
		{ name: "logmein", link: "https://secure.logmein.com/home/en" },
		{ name: "arthrex", link: "https://www.arthrex.com/" }
	];
	let silver_sponsors = [
		{ name: "invoca", link: "https://www.invoca.com" },
		{ name: "appfolio", link: "https://www.appfolio.com" },
		{ name: "fastspring", link: "https://fastspring.com/" },
		{ name: "hgdata", link: "https://www.hgdata.com" },
		{ name: "toyon", link: "https://www.toyon.com/" },
		{ name: "lastline", link: "https://www.lastline.com/" }
	];
	let bronze_sponsors = [
		{ name: "bloomberg", link: "https://www.bloomberg.com/" },
		{ name: "montecito", link: "https://montecito.bank/" },
		{ name: "ccs", link: "https://www.ccs.ucsb.edu/" },
		{ name: "yc", link: "https://www.ycombinator.com/" },
		{ name: "jetbrains", link: "https://www.jetbrains.com" },
		{ name: "sparkling_ice", link: "http://www.sparklingice.com/" }
	];
%>

<div id="sponsor-container">
	<h1 class="header">Powered By</h1>
	<div id="wreaths">
		<img src="/images/left-wreath.svg" />
		<img src="/images/right-wreath.svg" />
	</div>
	<div id="sponsors">
		<div id="gold-sponsor-container" class="tier-container">
			<% gold_sponsors.forEach(sponsor => { %>
				<% let { name, link } = sponsor; %>
				<%- include("sponsor", { name, link, tier: "gold"}) %>
			<% }) %>
		</div>

		<div id="silver-sponsor-container" class="tier-container">
			<% silver_sponsors.forEach(sponsor => { %>
				<% let { name, link } = sponsor; %>
				<%- include("sponsor", { name, link, tier: "silver" }) %>
			<% }) %>
		</div>

		<div id="bronze-sponsor-container" class="tier-container">
			<% bronze_sponsors.forEach(sponsor => { %>
				<% let { name, link } = sponsor; %>
				<%- include("sponsor", { name, link, tier: "bronze" }) %>
			<% }) %>
		</div>
	</div>
	<p id="sponsor-contact-txt">
		Interested in sponsoring? Contact us at <a href="mailto:sponsors@sbhacks.com">sponsors@sbhacks.com</a>
	</p>
</div>

